@import '../../styles/variables';

.pageContainer {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f2f2f2;
}

.content {
  flex: 1;
  padding: 20px 16px 96px 16px;
  overflow-y: auto;
}

.loading, .error, .noData {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 200px;
  font-size: $font-size-md;
  color: $gray;
}

.error {
  color: $error;
}

// 공통 카드 스타일
.card {
  background: $white;
  border-radius: 18px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  padding: 24px;
  margin-bottom: 20px;
}

// 프로젝트 정보 카드
.projectInfoCard {
  background: $white;
  border-radius: 20px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  padding: 20px;
  margin-bottom: 16px;
  height: 140px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  
  .projectName {
    font-size: 15px;
    font-weight: $font-weight-bold;
    color: $gray-dark;
    margin-bottom: 4px;
  }
  
  .projectDescription {
    font-size: 10px;
    color: #999899;
    margin-bottom: 24px;
  }
  
  .memberProfiles {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
    
    .currentMember {
      display: flex;
      align-items: center;
      gap: 12px;
      
      .profileImage {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        border: 2px solid $gray-light;
        object-fit: cover;
      }
      
      .memberInfo {
        display: flex;
        flex-direction: column;
        gap: 4px;
        
        .currentLabel {
          font-size: 12px;
          color: $gray;
          margin-bottom: 2px;
        }
        
        .memberName {
          font-size: 16px;
          font-weight: $font-weight-bold;
          color: $primary-color;
        }
      }
    }
    
    .otherMembers {
      display: flex;
      gap: 8px;
      
      .profileItem {
        position: relative;
        
        .profileImage {
          width: 35px;
          height: 35px;
          border-radius: 50%;
          border: 2px solid $gray-light;
          object-fit: cover;
          
          &.completed {
            border-color: $primary-color;
          }
        }
        
        .statusIcon {
          position: absolute;
          top: -2px;
          right: -2px;
          width: 12px;
          height: 12px;
          border-radius: 50%;
          background: $primary-color;
          display: flex;
          align-items: center;
          justify-content: center;
          
          .checkmark {
            color: $white;
            font-size: 8px;
          }
        }
      }
    }
  }
}

// 질문 텍스트
.questionText {
  font-size: 18px;
  line-height: 140.98%;
  font-weight: 600;
  color: $gray-dark;
  margin-bottom: 16px;
  text-align: left;
}

// 카테고리 평가 섹션
.categorySection {
  margin-bottom: 24px;
  
  .categoryItem {
    background: $white;
    border-radius: 20px;
    padding: 16px 18px;
    height: 115px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    
    &:last-child {
      margin-bottom: 0;
    }
    
    .categoryHeader {
      margin-bottom: 16px;
      width: 100%;
      
      .categoryName {
        font-size: 14px;
        font-weight: $font-weight-bold;
        color: $gray-dark;
        margin-bottom: 6px;
      }
      
      .categoryDescription {
        font-size: 9px;
        color: $gray;
        line-height: 1.3;
        text-align: center;
        word-break: keep-all;
        overflow-wrap: break-word;
        max-width: 100%;
        padding: 0 6px;
        margin: 0 auto;
      }
    }
    
    .sliderContainer {
      position: relative;
      margin-bottom: 10px;
      
                        .sliderTrack {
          position: relative;
          width: 100%;
          height: 6px;
          background: #f0f0f0;
          border-radius: 3px;
          cursor: pointer;
          touch-action: none;
          
          // 터치 영역 확대를 위한 가상 영역
          &::before {
            content: '';
            position: absolute;
            top: -12px;
            left: 0;
            right: 0;
            bottom: -12px;
            z-index: 1;
          }
          
          .sliderFill {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            background: linear-gradient(90deg, #FF6B6B, #FF8E8E);
            border-radius: 3px;
            transition: width 0.3s ease;
          }
          
          .sliderThumb {
            position: absolute;
            top: -8px;
            width: 22px;
            height: 22px;
            background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
            border-radius: 50%;
            box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.2);
            cursor: pointer;
            transition: left 0.3s ease;
            z-index: 2;
            border: 3px solid white;
            
            // 터치 영역 확대
            &::before {
              content: '';
              position: absolute;
              top: -8px;
              left: -8px;
              right: -8px;
              bottom: -8px;
              border-radius: 50%;
            }
            
            // 터치 피드백
            &:active {
              transform: scale(1.1);
              box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.3);
            }
          }
        }
    }
    
    .sliderLabels {
      display: flex;
      justify-content: space-between;
      font-size: 10px;
      color: $gray;
      margin-top: 14px;
      
      .labelButton {
        padding: 4px 6px;
        cursor: pointer;
        user-select: none;
        transition: color 0.2s ease;
        font-size: 10px;
        
        &:hover {
          color: $primary-color;
        }
        
        &:active {
          transform: scale(1.05);
          color: $primary-color;
        }
      }
    }
  }
}

// 전체 별점 섹션
.overallRatingSection {
  @extend .card;
  text-align: center;
  
  .overallLabel {
    font-size: 16px;
    font-weight: $font-weight-bold;
    color: $gray-dark;
    margin-bottom: 16px;
  }
  
  .starsContainer {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
  }
}

// 역할 입력 섹션
.roleSection {
  @extend .card;
  
  .roleLabel {
    font-size: 16px;
    font-weight: $font-weight-bold;
    color: $gray-dark;
    margin-bottom: 8px;
  }
  
  .roleDescription {
    font-size: 14px;
    color: $gray;
    margin-bottom: 16px;
    line-height: 1.4;
  }
  
  .roleInput {
    width: 100%;
    min-height: 80px;
    padding: 12px;
    border: 1px solid $gray-light;
    border-radius: $border-radius-base;
    font-size: $font-size-sm;
    resize: vertical;
    
    &:focus {
      outline: none;
      border-color: $primary-color;
    }
  }
}

// 키워드 입력 섹션
.keywordInput {
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
  
  .keywordLabel {
    font-size: 14px;
    font-weight: $font-weight-bold;
    color: $gray-dark;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 6px;
    
    &::before {
      content: '#';
      color: #FF6B6B;
      font-weight: bold;
    }
  }
  
  .keywordDescription {
    font-size: 11px;
    color: $gray;
    margin-bottom: 12px;
    line-height: 1.4;
  }
  
  .keywordInputContainer {
    display: flex;
    gap: 8px;
    align-items: center;
    
    .keywordInputField {
      flex: 1;
      padding: 10px 12px;
      border: 2px solid #f0f0f0;
      border-radius: 8px;
      font-size: 13px;
      background: #fafafa;
      transition: all 0.2s ease;
      
      &:focus {
        outline: none;
        border-color: #FF6B6B;
        background: $white;
        box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.1);
      }
      
      &::placeholder {
        color: #999;
        font-size: 12px;
      }
    }
    
    .keywordAddButton {
      padding: 10px 16px;
      background: #FF6B6B;
      color: $white;
      border: none;
      border-radius: 8px;
      font-size: 12px;
      font-weight: $font-weight-bold;
      cursor: pointer;
      transition: all 0.2s ease;
      white-space: nowrap;
      
      &:hover {
        background: #FF5252;
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(255, 107, 107, 0.3);
      }
      
      &:active {
        transform: translateY(0);
      }
      
      &:disabled {
        background: #ccc;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
      }
    }
  }
  
  .keywordTags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 12px;
    
    .keywordTag {
      background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
      color: $white;
      padding: 6px 12px;
      border-radius: 16px;
      font-size: 11px;
      font-weight: $font-weight-bold;
      display: flex;
      align-items: center;
      gap: 6px;
      box-shadow: 0 1px 3px rgba(255, 107, 107, 0.3);
      
      .removeBtn {
        cursor: pointer;
        font-weight: bold;
        font-size: 14px;
        line-height: 1;
        
        &:hover {
          opacity: 0.8;
        }
      }
    }
  }
}

// 완료 확인 섹션
.completionSection {
  @extend .card;
  text-align: center;
  padding: 32px 20px;
}


  
  .completionIcon {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: linear-gradient(135deg, $success, lighten($success, 10%));
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px;
    box-shadow: 0 8px 24px rgba($success, 0.3);
    position: relative;
    
    &::after {
      content: '';
      position: absolute;
      top: -4px;
      left: -4px;
      right: -4px;
      bottom: -4px;
      border-radius: 50%;
      background: linear-gradient(45deg, $success, lighten($success, 20%));
      z-index: -1;
      opacity: 0.2;
    }
    
    .checkmark {
      color: $white;
      font-size: 48px;
      font-weight: $font-weight-bold;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }
  }
  
  .completionMessage {
    font-size: $font-size-lg;
    color: $gray-dark;
    margin-bottom: 8px;
    font-weight: $font-weight-bold;
    
    &:last-of-type {
      font-size: $font-size-md;
      color: $gray;
      font-weight: $font-weight-regular;
    }
  }
}

// 응원 메시지 섹션
.encouragementSection {
  @extend .card;
  
  .encouragementLabel {
    font-size: $font-size-md;
    font-weight: $font-weight-bold;
    color: $gray-dark;
    margin-bottom: 8px;
  }
  
  .encouragementWarning {
    font-size: $font-size-xs;
    color: $error;
    margin-bottom: 12px;
  }
  
  .encouragementInput {
    width: 100%;
    min-height: 60px;
    padding: 12px;
    border: 1px solid $gray-light;
    border-radius: $border-radius-base;
    font-size: $font-size-sm;
    resize: vertical;
    
    &:focus {
      outline: none;
      border-color: $primary-color;
    }
  }
}

// 전송 완료 섹션
.successSection {
  @extend .card;
  text-align: center;
  padding: 60px 20px;
  background: linear-gradient(135deg, $white, lighten($primary-color, 45%));
  
  .successIcon {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: linear-gradient(135deg, $primary-color, darken($primary-color, 10%));
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 32px;
    box-shadow: 0 12px 32px rgba($primary-color, 0.4);
    position: relative;
    animation: successPulse 2s ease-in-out infinite;
    
    &::after {
      content: '';
      position: absolute;
      top: -6px;
      left: -6px;
      right: -6px;
      bottom: -6px;
      border-radius: 50%;
      background: linear-gradient(45deg, $primary-color, lighten($primary-color, 20%));
      z-index: -1;
      opacity: 0.3;
      animation: successGlow 2s ease-in-out infinite;
    }
    
    .checkmark {
      color: $white;
      font-size: 60px;
      font-weight: $font-weight-bold;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }
  }
  
  .successMessage {
    font-size: $font-size-xl;
    font-weight: $font-weight-bold;
    color: $gray-dark;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    margin-bottom: 16px;
  }
  
  .successDescription {
    font-size: 14px;
    color: $gray;
    line-height: 1.5;
    margin-bottom: 8px;
  }
}

@keyframes successPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

@keyframes successGlow {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(1.1);
  }
}

// 버튼 스타일
.button {
  width: 100%;
  padding: 16px;
  border: none;
  border-radius: 12px;
  font-size: 15px;
  font-weight: $font-weight-bold;
  cursor: pointer;
  transition: all 0.2s ease;
  
  &.primary {
    background: $primary-color;
    color: $white;
    
    &:hover {
      background: darken($primary-color, 10%);
    }
    
    &:disabled {
      background: $gray-light;
      color: $gray;
      cursor: not-allowed;
    }
  }
  
  &.secondary {
    background: $white;
    color: $gray-dark;
    border: 1px solid $gray-light;
    
    &:hover {
      background: $gray-light;
    }
  }
}

// 입력 완료 상태 피드백
.completionFeedback {
  text-align: center;
  color: $error;
  font-size: $font-size-sm;
  margin-bottom: 12px;
  padding: 8px 12px;
  background: lighten($error, 45%);
  border-radius: $border-radius-base;
  border: 1px solid lighten($error, 30%);
}

// 버튼 컨테이너
.buttonContainer {
  margin-top: 24px;
  display: flex;
  gap: 12px;
  
  .button {
    flex: 1;
  }
}

// 단계별 컨테이너
.stepContainer {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

// 진행 표시기
.progressIndicator {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  margin: 16px 0;
  
  .progressStep {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: $font-weight-bold;
    background: $gray-light;
    color: $white;
    transition: all 0.3s ease;
    
    &.completed {
      background: $primary-color;
      color: $white;
    }
    
    &.current {
      background: $primary-color;
      color: $white;
    }
    
    .stepNumber {
      font-size: 12px;
      font-weight: $font-weight-bold;
    }
  }
  
  .progressLine {
    width: 24px;
    height: 1px;
    background: $gray-light;
    transition: background 0.3s ease;
    border: 1px dashed $gray-light;
    
    &.completed {
      background: $primary-color;
      border-color: $primary-color;
    }
  }
} 